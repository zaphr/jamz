<h1>Listing songs</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Youtube</th>
    <th>Artist</th>
    <th>Capo position</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @songs.each do |song| %>
  <tr>
    <td><%= song.name %></td>
    <td><%= song.youtube_id %></td>
    <td><%= song.artist %></td>
    <td><%= song.capo_position %></td>
    <td><%= link_to 'Show', song %></td>
    <td><%= link_to 'Edit', edit_song_path(song) %></td>
    <td><%= link_to 'Destroy', song, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

